generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id             Int           @id @default(autoincrement())
  steamId        String        @unique
  steamIdType    SteamIdType
  name           String
  profileImageId String
  stats          PlayerStats[]

  @@map("players")
}

enum SteamIdType {
  ID
  CUSTOM
}

model PlayerStats {
  id            Int                 @id @default(autoincrement())
  totalRank     Int?
  totalScore    Int?
  pvpRank       Int?
  pvpScore      Int?
  scoreRatioMin Float
  scoreRatioMax Float
  player        Player              @relation(fields: [playerId], references: [id])
  playerId      Int
  snapshot      LeaderboardSnapshot @relation(fields: [snapshotId], references: [id])
  snapshotId    Int

  @@map("player_stats")
}

model LeaderboardSnapshot {
  id    Int           @id @default(autoincrement())
  date  DateTime      @db.Timestamptz(0)
  stats PlayerStats[]

  @@map("leaderboard_snapshots")
}
