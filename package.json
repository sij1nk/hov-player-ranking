{
  "name": "hov-player-ranking",
  "version": "1.0.0",
  "author": "sijink",
  "type": "module",
  "scripts": {
    "check": "tsc",
    "lint": "eslint",
    "format": "prettier -w .",
    "build": "esbuild src/index.ts --platform=node --target=node22 --format=esm --bundle --minify --outfile=dist/index.js",
    "generate": "node dist/index.js > out.json; cp README_template.md README.md; sed -i \"s/%DATE%/$(date)/\" README.md; tablemark out.json >> README.md; rm out.json"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tsconfig/recommended": "^1.0.10",
    "@types/node": "^24.0.4",
    "esbuild": "^0.25.5",
    "eslint": "^9.29.0",
    "prettier": "^3.6.1",
    "tablemark-cli": "^3.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "node-html-parser": "^7.0.1"
  }
}
